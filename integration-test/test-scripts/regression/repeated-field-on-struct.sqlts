for::{
    template: [
        test::{
            name: "repeated field on struct is ambiguous",
            sql: ''' SELECT ${identifier} FROM `[{repeated:1, repeated:2}]` ''',
            expected: error::{
                code: EVALUATOR_AMBIGUOUS_BINDING,
                properties: {
                    LINE_NUMBER: 1,
                    COLUMN_NUMBER: $cn,
                    BINDING_NAME: $bn,
                    BINDING_NAME_MATCHES: "repeated, repeated"
                }
            }
        }
    ],

    variableSets: [
        { identifier: "REPEATED",         cn: 9,  bn: "REPEATED" }, // case sensitive
        { identifier: ''' "repeated" ''', cn: 10, bn: "repeated" }  // case insensitive
    ]
}
