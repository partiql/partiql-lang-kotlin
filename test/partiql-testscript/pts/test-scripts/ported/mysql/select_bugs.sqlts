// mysql-test/include/select.inc
// Regression tests for mysql BUGs

$ion_1_0

test::{
  id: 'MYSQL_SELECT_BUG_01',
  environment:{
    t1:[
      {
        a:1,
        b:2
      },
      {
        a:2,
        b:2
      },
      {
        a:3,
        b:2
      },
      {
        a:4,
        b:2
      }
    ],
    t2:[
      {
        c:1,
        d:3
      },
      {
        c:2,
        d:3
      },
      {
        c:3,
        d:4
      },
      {
        c:4,
        d:4
      }
    ]
  },
  statement: "select * from t1 left join t2 on t1.a = t2.c where t2.d in (4);",
  expected:(success (bag
    {
      a:3,
      b:2,
      c:3,
      d:4
    }
    {
      a:4,
      b:2,
      c:4,
      d:4
    }
  ))
}
