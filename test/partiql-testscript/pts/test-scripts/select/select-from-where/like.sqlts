test::{
    id: 'Incorrect type for text',
    statement: '''
        SELECT * FROM `[true]` 
        WHERE 1 LIKE '1'
        ''',
    expected: (error)
}


test::{
    id: 'Incorrect type for pattern',
    statement: '''
        SELECT * FROM `[true]` 
        WHERE 'a' LIKE 2 
        ''',
    expected: (error)
}



test::{
    id: 'Incorrect type for Escape',
    statement: '''
        SELECT * FROM `[true]` 
        WHERE 'a' LIKE 'a' ESCAPE 3
        ''',
    expected: (error)
}


test::{
    id: 'More than one character given for ESCAPE',
    statement: '''
        SELECT * FROM `[true]` 
        WHERE 'a' LIKE 'a' ESCAPE 'aa'
        ''',
    expected: (error)
}
