set_default_environment::{
    people: [
        { 
          first_name: "John", 
          last_name: "Doe" 
        },
    ],
}

test::{
    id: 'Empty String for LIKE pattern evaluates to false',
    statement: ''' 
             SELECT * FROM people AS p 
             WHERE p.first_name LIKE '' 
         ''',
    expected: (success (bag))
}

test::{
    id: 'Empty String for LIKE pattern and text evaluates to true',
    statement: ''' 
             SELECT * FROM people AS p 
             WHERE '' LIKE '' 
         ''',
    expected: (success (bag {
         first_name: "John", 
         last_name: "Doe" 
    }))
}
