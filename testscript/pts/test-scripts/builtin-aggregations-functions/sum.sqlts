set_default_environment::{
     data: [1, 1, 1, 2],
}

for::{
    template: [
        test::{
            id: 'sum top level',
            statement: "$agg",
            expected: $result
        },
    ],
    variable_sets: [
        { agg: 'SUM(data)',          result: (success 5) },
        { agg: 'SUM(ALL data)',      result: (error) }, // not allowed top level
        { agg: 'SUM(DISTINCT data)', result: (error) }, // not allowed top level
    ]
}

for::{
    template: [
        test::{
            id: 'sum select',
            statement: "SELECT $agg AS a FROM data d",
            expected: (success (bag {a: $result}))
        },
    ],
    variable_sets: [
        { agg: 'SUM(d)',          result: 5 },
        { agg: 'SUM(ALL d)',      result: 5 },
        { agg: 'SUM(DISTINCT d)', result: 3 },
    ]
}

for::{
    template: [ 
        test::{
            id: 'sum group by',
            statement: '''
                SELECT t.a, $agg as c 
                FROM <<
                    {'a': 'f1', 'b': 1},
                    {'a': 'f1', 'b': 1},
                    {'a': 'f1', 'b': 1},
                    {'a': 'f1', 'b': 2},
                    
                    {'a': 'f2', 'b': 2},
                    {'a': 'f2', 'b': 4}
                >> AS t
                GROUP BY t.a
            ''',
            
            expected: (success (bag 
                {a: "f1", c: $expectedF1} 
                {a: "f2", c: $expectedF2}))
        },
    ],
    variable_sets: [
        { agg: 'SUM(t.b)',          expectedF1: 5, expectedF2: 6 },
        { agg: 'SUM(ALL t.b)',      expectedF1: 5, expectedF2: 6 },
        { agg: 'SUM(DISTINCT t.b)', expectedF1: 3, expectedF2: 6 },
    ]
}
