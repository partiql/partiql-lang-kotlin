// valid cases ----------------------------------------------------------------------------------------------------
for::{
    template: [
        test::{
            id: 'exists valid cases',
            statement: "exists(${param})",
            expected: (success $result)
        }
    ],
    variable_sets: [
        // base types
        { param: "1",       result: false },
        { param: "1e0",     result: false },
        { param: "1.0",     result: false },
        { param: "''",      result: false },
        { param: "`2017T`", result: false },

        // null and missing
        { param: "null",    result: false },
        { param: "missing", result: false },

        // empty sequences
        { param: "`[]`", result: false },
        { param: "`()`", result: false },
        { param: "`{}`", result: false },
        { param: "<<>>", result: false },

        // not empty sequences
        { param: "`[1]`",    result: true },
        { param: "`(1)`",    result: true },
        { param: "`{a: 1}`", result: true },
        { param: "<<1>>",    result: true },

        // sequences with null or missing as the only element
        { param: "`[null]`",       result: true },
        { param: "`[missing]`",    result: true },
        { param: "`(null)`",       result: true },
        { param: "`(missing)`",    result: true },
        { param: "`{a: null}`",    result: true },
        { param: "`{a: missing}`", result: true },
        { param: "<<null>>",     result: true },
        { param: "<<missing>>",  result: true },
    ]
}

// wrong number of arguments --------------------------------------------------------------------------------------
for::{
    template: [
        test::{
            id: 'exists wrong number of arguments',
            statement: $sql,
            expected: (error)
        }
    ],
    variable_sets: [
        { sql: "exists()" },
        { sql: "exists(`[]`, 1)" }
    ]
}
